<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/ewatheq_color_sign_in_bg">

    <LinearLayout
        android:id="@+id/ll_about_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_about_us_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/str_developed_by"
            android:textColor="@color/ewatheq_color_forgot_password"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/interface_text_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_about_interface"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/str_home_about_us"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="0dp"
            android:background="@color/ewatheq_color_primary" />

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/about_us_banner" />

        <!--<ListView
            android:id="@+id/lv_about_us_lists"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:padding="10dp" />-->
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/wv_about_watheq"
            android:background="@color/ewatheq_color_sign_in_bg"/>


    </LinearLayout>

</RelativeLayout>